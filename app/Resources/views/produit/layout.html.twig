{% extends 'base.html.twig' %}

{% block body %}
  <input id="tab_name" type="hidden" value="produit" />
  <div class="app-title">
    <div>
      <h1><i class="fa fa-edit"></i> {{ action }}</h1>
      <!-- <p>Bootstrap default form components</p> -->
    </div>
    <ul class="app-breadcrumb breadcrumb">
      <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
      <li class="breadcrumb-item">Produit</li>
      <li class="breadcrumb-item"><a href="#">{{ action }}</a></li>
    </ul>
  </div>

  {% block container %}
  <div class="row justify-content-lg-center">
    <div class="col-lg-9">
      <div class="tile tile2">

        <div class="row">
            <div class="col-lg-12">
              <div class="bs-component messageContainer">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                      <div class="alert alert-dismissible alert-{{label}}">
                        <button class="close" type="button" data-dismiss="alert">Ã—</button><strong>{{ message }}</strong>
                      </div>
                    {% endfor %}
                {% endfor %}
              </div>
            </div>
          </div>

        <div class="row">
          <div class="col-lg-12">
            {% block body2 %}

            {% endblock %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endblock %}

  {% block without_container %}
  {% endblock %}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
