{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ventes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td><a href="{{ path('vente_show', { 'id': vente.id }) }}">{{ vente.id }}</a></td>
                <td>{% if vente.date %}{{ vente.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ vente.montant }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vente_show', { 'id': vente.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vente_edit', { 'id': vente.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vente_new') }}">Create a new vente</a>
        </li>
    </ul>
{% endblock %}
