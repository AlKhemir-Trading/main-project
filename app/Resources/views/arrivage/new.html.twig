{% extends 'arrivage/layout.html.twig' %}

{% set action = "Nouvel Arrivage" %}

{% block body2 %}


    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

        <div class="form-group">
          {{ form_label(form.fournisseur, null,
            { 'label_attr': {'class': 'font-weight-bold'} }) }}
          {{ form_errors(form.fournisseur) }}

            {{ form_widget(form.fournisseur ,{'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
          {{ form_label(form.dateCreation, null,
            { 'label_attr': {'class': 'font-weight-bold'} }) }}
          {{ form_errors(form.dateCreation) }}

            {{ form_widget(form.dateCreation ,{'attr': {'class': 'form-control', 'data-format': "dd/MM/yyyy hh:mm:ss"} }) }}
        </div>



        <hr />
        <label class="font-weight-bold">Produits Arriv√©s :</label>

        <div class="row clearfix">

          <div class="col-md-12 table-responsive">
            <table class="table table-bordered table-hover table-sortable" id="tab_logic" data-index="0" data-prototype="">
              <thead>
                <tr >
                  <th class="text-center" style="min-width:120px">
                    Produit
                  </th>
                  <th class="text-center">
                    Quantite
                  </th>
                  <th class="text-center">
                    Prix Unit
                  </th>
                  <th class="text-center">
                    Montant
                  </th>
                  <th class="text-center" style="border-top:none;border-right:none">
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr id='prototype' class="d-none">
                  <td data-name="name">
                      {{ form_widget(form.elementArrivages.vars.prototype.produit, {'attr': {'class': 'form-control'}}) }}
                  </td>
                  <td data-name="mail">
                      <!-- <input type="text" name='mail0' placeholder='Email' class="form-control"/> -->
                      {{ form_widget(form.elementArrivages.vars.prototype.quantite, {'attr': {'class': 'form-control'}}) }}
                  </td>
                  <td data-name="desc">
                      {{ form_widget(form.elementArrivages.vars.prototype.prixVente, {'attr': {'class': 'form-control'}}) }}
                  </td>
                  <td data-name="sel">
                      {{ form_widget(form.elementArrivages.vars.prototype.prixAchat, {'attr': {'class': 'form-control montant'}}) }}
                  </td>
                  <td data-name="del">
                    <button class="btn btn-danger item row-remove" type="button">
                      <i class="fa fa-close"></i>
                    </button>
                  </td>
                </tr>
              </tbody>
              <tfoot>
                <td></td>
                <td></td>
                <td></td>
                <td>
                  <input id="montant" type="text" required="required" class="form-control" value="0" disabled>
                </td>
                <td>
                  <button type="button" id="add_row" class='btn btn-primary'>
                    <i class="fa fa-plus"></i>
                  </button>
                </td>
              </tfoot>
            </table>
          </div>
        </div>
        <!-- <a id="add_row" class="btn btn-default pull-right">Add Row</a> -->
    <hr />

    <input type="submit" class="btn btn-primary" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('arrivage_index') }}">Back to the list</a>
        </li>
    </ul>


{% endblock %}

